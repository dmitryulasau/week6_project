{% extends "base.html.j2" %}

{% block content %}
    <h1 class="h1-reg">Registration</h1>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <div>
            {{ form.first_name.label(class="form-label reg") }}
            {{ form.first_name(class="form-control reg-input") }}<br>
            {% for error in form.first_name.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>

        <div>
            {{ form.last_name.label(class="form-label reg") }}
            {{ form.last_name(class="form-control reg-input") }}<br>
            {% for error in form.last_name.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>

        <div>
            {{ form.email.label(class="form-label reg") }}
            {{ form.email(class="form-control reg-input") }}<br>
            {% for error in form.email.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>
        <div>
            {{ form.password.label(class="form-label reg") }}
            {{ form.password(class="form-control reg-input") }}<br>
            {% for error in form.password.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>
        <div>
            {{ form.confirm_password.label(class="form-label reg") }}
            {{ form.confirm_password(class="form-control reg-input") }}<br>
            {% for error in form.confirm_password.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>
        <div>{{ form.submit(class="reg-btn btn btn-success") }}</div>
    </form>
{% endblock %}